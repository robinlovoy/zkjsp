	<radiogroup id="rg2" onCheck="ck.label = event.target.label+'-'+self.selectedIndex">
		<radio label="M1"/>
		<radio label="M2"/>
		<radio label="M3"/>
	</radiogroup>
	<radiogroup id="rg3" name="W" onCheck="ck.label = event.target.label+'-'+self.selectedIndex">
